<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopSmartDevice.App"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit">
    
    <Application.Resources>
        <ResourceDictionary>
            <!--  Facture Page Style  -->
            <Style x:Key="FactureLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="Medium" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="Padding" Value="5,0,5,0" />
            </Style>

            <Style x:Key="FactureEntryStyle" TargetType="Frame">
                <Setter Property="Padding" Value="5,0,5,0" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="IsClippedToBounds" Value="True" />
            </Style>

            <!--  Validation style  -->
            <Style x:Key="InvalidStyle" TargetType="Label">
                <Setter Property="TextColor" Value="Red" />
                <Setter Property="Padding" Value="5,0,5,0" />
            </Style>
            <xct:InvertedBoolConverter x:Key="invertBoolConverter" />

        </ResourceDictionary>
    </Application.Resources>
</Application>